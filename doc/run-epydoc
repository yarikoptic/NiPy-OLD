#!/bin/sh
PYTHON_PATH=../lib
FILTER='grep -v tests | grep -v enthought | grep -v sandbox'

output_dir=api
mkdir -p ${output_dir}
epydoc -vvvv \
  --output ${output_dir} \
  --name nipy \
  --url http://neuroimaging.scipy.org \
  --no-private \
  --inheritance listed \
  --graph all \
  $(find $PYTHON_PATH/neuroimaging -name "*py" | xargs $FILTER)
